config SOC_SERIES_M48X
	select ARM
	select CPU_CORTEX_M4
	select CPU_CORTEX_M_HAS_DWT
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select CORTEX_M_SYSTICK if SYS_CLOCK_EXISTS
	select HAS_POWEROFF

config SOC_M483
	select HAS_NUMICRO_HAL
	select HAS_NUMAKER_HAL

config SOC_M484
	select HAS_NUMICRO_HAL
	select HAS_NUMAKER_HAL

config SOC_M487
	select HAS_NUMICRO_HAL
	select HAS_NUMAKER_HAL
